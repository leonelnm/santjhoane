---
import Title from "./ui/Title.astro";

const days = [
  { day: "Lunes", open: "09:00", close: "21:15" },
  { day: "Martes", open: "09:00", close: "21:15" },
  { day: "Miércoles", open: "09:00", close: "21:15" },
  { day: "Jueves", open: "09:00", close: "21:15" },
  { day: "Viernes", open: "09:00", close: "21:15" },
  { day: "Sábado", open: "09:00", close: "21:15" },
  { day: "Domingo y festivos", open: "09:00", close: "19:15" }
];
---

<section class="pt-16 px-4 max-w-4xl mx-auto">
  <Title text="Nuestro Horario" />
  <ul class="list-none space-y-1">
    {
      days.map((item) => (
        <li class="text-amber-900 text-lg">
          <strong>{item.day}:</strong> {item.open} – {item.close}
        </li>
      ))
    }
  </ul>
</section>
