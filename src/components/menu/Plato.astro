---
export interface Props {
  plato: Plato;
}

const { plato } = Astro.props;
const { img } = plato;
---

<article
  class="flex flex-col justify-center gap-2 rounded-lg bg-[#FDF6E3] p-4 shadow-md"
>
  <!--si hay img pintar <img> -->
  <img
    src={img?.url}
    alt={img?.nombre}
    class="h-48 w-full rounded-lg object-cover"
    loading="lazy"
  />

  <div class="flex justify-between">
    <h3 class="text-xl font-semibold">{plato.nombre}</h3>
    <span>{plato.precio}</span>
  </div>

  <p class="text-lg">{plato.ingredientes}</p>
</article>
