---
import { ClientRouter } from "astro:transitions";

interface Props {
	title: string;
	description?: string;
}

const descripcionDefault =
	"Descubre Restaurante Sant Jhoan'e, conocido tambi√©n como San Joan, un lugar para disfrutar de la mejor comida ecuatoriana en Valencia.";

const { title, description = descripcionDefault } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<slot />
		<script>
			document.addEventListener("astro:page-load", () => {
				const active = document.getElementById("active-button");
				if (active) {
					active.scrollIntoView({
						behavior: "auto",
						inline: "center",
						block: "nearest",
					});
				}
			});
		</script>
	</body>
</html>
